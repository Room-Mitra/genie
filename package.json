{
  "type": "module",
  "devDependencies": {
    "eslint": "^9.29.0",
    "@eslint/js": "^9.29.0",
    "globals": "^15.11.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "@next/eslint-plugin-next": "^14.2.5",
    "prettier": "^3.3.3",
    "lint-staged": "^15.2.9",
    "husky": "^9.1.6"
  },
  "lint-staged": {
    "api/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "webapp/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "website/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{json,md,css,scss,html,yml,yaml}": [
      "prettier --write --ignore-unknown"
    ],
    "*.tf": [
      "terraform fmt -recursive"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint website --ext .js,.jsx"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "nvm": "^0.0.4"
  }
}
